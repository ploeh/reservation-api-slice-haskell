name:                RestaurantReservation
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/RestaurantReservation#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2019 Mark Seemann
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Validation
                     , API
                     , ReservationAPI
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , servant-server
                     , wai
                     , warp
  default-language:    Haskell2010

executable RestaurantReservation
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , RestaurantReservation
  default-language:    Haskell2010

test-suite RestaurantReservation.Test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       ValidationSpec
                     , ReservationAPISpec
  build-depends:       base
                     , RestaurantReservation
                     , hspec
                     , hspec-wai
                     , hspec-wai-json
                     , aeson
                     , QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/RestaurantReservation
